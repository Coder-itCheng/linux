{
    "title": "Linux-运维之美",
    "description": "Linux—流行的服务器操作系统",
    "plugins": [
        "disqus",
        "-lunr", "-search", "search-plus",
        "advanced-emoji",
        "github-buttons",
        "multipart",
        "splitter",
        "tbfed-pagefooter",
        "anchors",
        "sitemap",
        "copy-code-button",
        "-sharing", "sharing-plus",
        "toggle-chapters",
        "book-summary-scroll-position-saver",
        "prism",
        "-highlight",
        "favicon-absolute"
    ],
    "pluginsConfig": {
        "disqus": {
            "shortName": "linux-3"
        },
        "github-buttons": {
            "buttons": [{
                "user": "colin-chang",
                "repo": "linux",
                "type": "star",
                "size": "small"
            }]
        },
        "prism": {
            "css": [
                "prismjs/themes/prism-okaidia.css"
            ]
          },
        "tbfed-pagefooter": {
            "copyright": "&copy Colin Chang",
            "modify_label": "文件修订时间：",
            "modify_format": "YYYY-MM-DD HH:mm:ss"
        },
        "sitemap": {
            "hostname": "https://linux.colinchang.net"
        },
        "sharing": {
            "facebook": true,
            "twitter": true,
            "google": true,
            "weibo": false,
            "instapaper": false,
            "vk": false,
            "all": [
                "facebook", "google", "twitter","instapaper","vk","weibo"
            ]
        },
        "favicon-absolute":{
            "favicon": "img/assets/favicon.ico",
            "bookmark": "img/assets/favicon.ico",
            "appleTouchIcon152": "img/assets/apple-touch-icon-152.png",
            "appleTouchIconPrecomposed152": "img/assets/apple-touch-icon-152.png",
            "appleTouchIconMore": {
                "120x120": "img/assets/apple-touch-icon-120.png",
                "180x180": "img/assets/apple-touch-icon-180.png"
            },
            "appleTouchIconPrecomposedMore": {
                "120x120": "img/assets/apple-touch-icon-120.png",
                "180x180": "img/assets/apple-touch-icon-180.png"
            }
        }
    },
    "styles": {
        "website": "website.css"
    }
}
